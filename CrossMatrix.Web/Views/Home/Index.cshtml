@model CrossMatrix.Model.Models.MatrixModel
@{
	ViewData["Title"] = "CrossMatrix";
}

<div class="container">
	<h2>Input your Matrix</h2>
	<form asp-controller="Home" asp-action="Index" method="get">
		<div class="form-group">
			<label asp-for="@Model.MatrixString"></label>
			<textarea asp-for="@Model.MatrixString" class="form-control" wrap="off" rows="10" cols="10" placeholder="for Matrix">
			</textarea>
		</div>
		<div class="invalid-feedback" hidden=@String.IsNullOrWhiteSpace(@Model.InvalidFeedback)>
			@Model.InvalidFeedback
		</div>

		<div class="form-group">
			<label asp-for="@Model.PlusesСounter"></label>
			<p> @Model.PlusesСounter.ToString() </p>
		</div>

		<button type="submit" class="btn btn-success" id="target">Submit</button>
	</form>
</div>

<hr />
<div class="container examples">
	<button type="button" class="btn btn-info" onclick="changeOption(0)">Two pluses</button>
	<button type="button" class="btn btn-info" onclick="changeOption(1)">Three pluses</button>
	<button type="button" class="btn btn-info" onclick="changeOption(2)">Four pluses</button>
	<button type="button" class="btn btn-info" onclick="changeOption(3)">Six pluses</button>
	<button type="button" class="btn btn-info" onclick="changeOption(4)">One plus</button>
</div>


